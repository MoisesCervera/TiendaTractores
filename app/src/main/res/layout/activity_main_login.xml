<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wheat_beige"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivityLogin">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="680dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/eti_contacto"
            android:layout_width="348dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:gravity="right|top"
            android:text="Cont치ctenos"
            android:textColor="@color/tire_black_green"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="398dp"
            android:layout_height="229dp"
            android:src="@drawable/logotrac" />

        <EditText
            android:id="@+id/caja_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/cream_white"
            android:hint="Correo electr칩nico"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:textAlignment="center"
            android:textColor="@color/tractor_green"
            android:textColorHint="@color/tractor_green"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/caja_psswrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/cream_white"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:padding="18dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/tractor_green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/tire_black_green"
            android:padding="18dp"
            android:text="Iniciar sesi칩n"
            android:textColor="@color/cream_white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--
            <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrese aqui" />
            -->

            <TextView
                android:id="@+id/eti_regist"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:hapticFeedbackEnabled="false"
                android:text="Crear cuenta"
                android:textColor="@color/tractor_green"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>